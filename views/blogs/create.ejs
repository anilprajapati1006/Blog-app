    <div class="container mt-5">
        <h1 class="mb-3">Create New Blogs</h1>
    <form action="/blogs" method="POST">
        <div class="mb-3">
            <label class="form-label">Blog Title</label>
            <input type="text" class="form-control" name="title" id="title">
        </div>
        <div class="mb-3">
            <label class="form-label">Blog Snippet</label>
            <input type="text" class="form-control" name="snippet" id="snippet">
        </div>
        <div class="mb-3">
            <label class="form-label">Blog Body</label>
            <textarea type="text" class="form-control" name="body" id="body"></textarea>  
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>

